<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants">

    <LinearLayout
        android:id="@+id/lead_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_background_selector"
        android:descendantFocusability="afterDescendants"
        android:orientation="vertical"
        android:paddingBottom="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#556199"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:weightSum="1">
            <TextView
                android:id="@+id/reasonDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:text="16th-Jan-2017"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/reasonRemarks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:text=""
                android:textColor="#FFFFFF"

                android:textSize="14sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/notapproval"
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:layout_marginRight="2dp"
                android:src="@drawable/notapproval"
                android:layout_height="wrap_content" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/approval"
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:layout_marginRight="2dp"
                android:src="@drawable/approval"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/notreject"
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:src="@drawable/accept"
                android:layout_height="wrap_content" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/reject"
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:src="@drawable/reject"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>
</FrameLayout>
